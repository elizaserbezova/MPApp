@model MealPlannerApp.Models.Ingredient

@{
    ViewData["Title"] = "Delete Ingredient";
}

<h1>Delete Ingredient</h1>

<h3>Are you sure you want to delete this ingredient?</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Recipe</dt>
        <dd class="col-sm-10">@Model.Recipe?.Name</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
