@model MealPlannerApp.Models.Meal

@{
    ViewData["Title"] = "Meal Details";
}

<h2>Meal Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Time of Day</dt>
        <dd class="col-sm-10">@Model.TimeOfDay</dd>

        <dt class="col-sm-2">Recipe</dt>
        <dd class="col-sm-10">@Model.Recipe?.Name</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>