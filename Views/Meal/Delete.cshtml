@model MealPlannerApp.Models.Meal

@{
    ViewData["Title"] = "Delete Meal";
}

<h2>Delete Meal</h2>

<h4>Are you sure you want to delete this meal?</h4>

<div>
    <h5>@Model.Name (@Model.Date.ToShortDateString())</h5>
    <p>Time of Day: @Model.TimeOfDay</p>
    <p>Recipe: @Model.Recipe?.Name</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>