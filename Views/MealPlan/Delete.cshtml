@model MealPlannerApp.Models.MealPlan

<h2>Are you sure you want to delete this meal plan?</h2>

<p><strong>Title:</strong> @Model.Title</p>
<p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
<p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
